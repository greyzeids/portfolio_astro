---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import galaxyBg from '../../public/textures/galaxy_background.jpg';

interface Props {
  title?: string;
}

const { title = "Sobre Mí" } = Astro.props;
---

<Layout title={title} bodyClass="about-body">
  <main class="about-container">
    <section class="hero-section">
      <div class="hero-background">
        <Image 
          src={galaxyBg} 
          alt="Galaxia de fondo" 
          width={1920} 
          height={1080}
          format="webp"
          quality={85}
          class="hero-image"
        />
      </div>
      <div class="hero-content">
        <h1>Miquel Carnot Luna</h1>
        <p class="subtitle">Desarrollador Full Stack & Entusiasta del 3D</p>
      </div>
    </section>

    <section class="about-content">
      <div class="profile-section">
        <h2>Mi Historia</h2>
        <p>
          Soy un desarrollador apasionado por crear experiencias digitales únicas. 
          Este portfolio es un ejemplo de cómo combino tecnologías web modernas 
          con gráficos 3D para crear algo verdaderamente especial.
        </p>
      </div>

      <div class="skills-section">
        <h2>Habilidades Técnicas</h2>
        <div class="skills-grid">
          <div class="skill-card">
            <h3>Frontend</h3>
            <ul>
              <li>React & Vue.js</li>
              <li>TypeScript</li>
              <li>Three.js</li>
              <li>CSS3 & SASS</li>
            </ul>
          </div>
          <div class="skill-card">
            <h3>Backend</h3>
            <ul>
              <li>Node.js</li>
              <li>Python</li>
              <li>PostgreSQL</li>
              <li>REST APIs</li>
            </ul>
          </div>
          <div class="skill-card">
            <h3>Herramientas</h3>
            <ul>
              <li>Git & GitHub</li>
              <li>Docker</li>
              <li>AWS</li>
              <li>Figma</li>
            </ul>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .about-container {
    min-height: 100vh;
    color: white;
  }

  .hero-section {
    position: relative;
    height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-content {
    text-align: center;
    z-index: 1;
  }

  .hero-content h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.8);
  }

  .subtitle {
    font-size: 1.2rem;
    opacity: 0.9;
    text-shadow: 1px 1px 2px rgba(0,0,0,0.8);
  }

  .about-content {
    padding: 4rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .profile-section {
    margin-bottom: 4rem;
  }

  .profile-section h2 {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
    color: #00d4ff;
  }

  .profile-section p {
    font-size: 1.1rem;
    line-height: 1.6;
    max-width: 800px;
  }

  .skills-section h2 {
    font-size: 2.5rem;
    margin-bottom: 2rem;
    color: #00d4ff;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .skill-card {
    background: rgba(255, 255, 255, 0.1);
    padding: 2rem;
    border-radius: 10px;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .skill-card h3 {
    color: #00d4ff;
    margin-bottom: 1rem;
    font-size: 1.5rem;
  }

  .skill-card ul {
    list-style: none;
    padding: 0;
  }

  .skill-card li {
    padding: 0.5rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .skill-card li:last-child {
    border-bottom: none;
  }

  @media (max-width: 768px) {
    .hero-content h1 {
      font-size: 2rem;
    }
    
    .about-content {
      padding: 2rem 1rem;
    }
    
    .skills-grid {
      grid-template-columns: 1fr;
    }
  }
</style> 