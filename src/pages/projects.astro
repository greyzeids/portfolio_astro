---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import galaxyBg from '../../public/textures/galaxy_background.jpg';

interface Props {
  title?: string;
}

const { title = "Proyectos" } = Astro.props;
---

<Layout title={title} bodyClass="content-body">
  <main class="projects-container">
    <section class="hero-section">
      <div class="hero-background">
        <Image 
          src={galaxyBg} 
          alt="Galaxia de fondo" 
          width={1920} 
          height={1080}
          format="webp"
          quality={85}
          class="hero-image"
        />
      </div>
      <div class="hero-content">
        <h1>Mis Proyectos</h1>
        <p class="subtitle">Experiencias digitales únicas y innovadoras</p>
      </div>
    </section>

    <section class="projects-content">
      <div class="projects-grid">
        <div class="project-card">
          <div class="project-image">
            <div class="project-placeholder">3D</div>
          </div>
          <div class="project-info">
            <h3>Portfolio Interactivo 3D</h3>
            <p>Un portfolio web con experiencia 3D inmersiva usando Three.js y Cannon.js</p>
            <div class="project-tech">
              <span class="tech-tag">Three.js</span>
              <span class="tech-tag">Cannon.js</span>
              <span class="tech-tag">Astro</span>
            </div>
          </div>
        </div>

        <div class="project-card">
          <div class="project-image">
            <div class="project-placeholder">AI</div>
          </div>
          <div class="project-info">
            <h3>Proyecto IA</h3>
            <p>Descripción del proyecto de inteligencia artificial</p>
            <div class="project-tech">
              <span class="tech-tag">Python</span>
              <span class="tech-tag">TensorFlow</span>
              <span class="tech-tag">React</span>
            </div>
          </div>
        </div>

        <div class="project-card">
          <div class="project-image">
            <div class="project-placeholder">WEB</div>
          </div>
          <div class="project-info">
            <h3>Aplicación Web</h3>
            <p>Descripción de la aplicación web</p>
            <div class="project-tech">
              <span class="tech-tag">Vue.js</span>
              <span class="tech-tag">Node.js</span>
              <span class="tech-tag">PostgreSQL</span>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .projects-container {
    min-height: 100vh;
    color: white;
  }

  .hero-section {
    position: relative;
    height: 50vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-content {
    text-align: center;
    z-index: 1;
  }

  .hero-content h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.8);
  }

  .subtitle {
    font-size: 1.2rem;
    opacity: 0.9;
    text-shadow: 1px 1px 2px rgba(0,0,0,0.8);
  }

  .projects-content {
    padding: 4rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .project-card {
    background: rgba(0, 30, 40, 0.8);
    border: 2px solid #00f6ff;
    border-radius: 10px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .project-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 246, 255, 0.3);
  }

  .project-image {
    height: 200px;
    background: linear-gradient(45deg, #32005e, #00ffc3);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .project-placeholder {
    font-size: 3rem;
    font-weight: bold;
    color: white;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
  }

  .project-info {
    padding: 1.5rem;
  }

  .project-info h3 {
    color: #00f6ff;
    margin-bottom: 1rem;
    font-size: 1.5rem;
  }

  .project-info p {
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-tag {
    background: rgba(0, 246, 255, 0.2);
    border: 1px solid #00f6ff;
    color: #00f6ff;
    padding: 0.25rem 0.75rem;
    border-radius: 15px;
    font-size: 0.8rem;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
    
    .hero-content h1 {
      font-size: 2rem;
    }
    
    .projects-content {
      padding: 2rem 1rem;
    }
  }
</style> 